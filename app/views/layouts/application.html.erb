<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <div class="container">
          <a href="/" class="left"><i class="large material-icons">all_inclusive</i></a>
          <ul id="nav-mobile" class="right">
            <% if current_user %>
              <li><a href='#'><%= current_user.email %></a></li>
              <li><%= link_to "Your Account", account_path %></a></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
              <li><a href="#">Something else</a></li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
            <li><%= link_to order_path do %>
              <i class="material-icons">shopping_cart</i></a></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <!-- <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p> -->
      <%= yield %>
    </div>
  </body>
</html>
